{
	"$schema": "https://turborepo.com/schema.json",
	"tasks": {
		"dev": {
			"cache": false,
			"persistent": true
		},
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**", "dist/**", "bin/**"]
		},
		"test": {
			"dependsOn": ["^test"],
			"outputs": ["coverage/**"]
		},
		"test:all": {},
		"lint": {
			"outputs": [".ruff-cache/**"]
		},
		"lint:fix": {}
	}
}
