{
	"extends": "@repo/tsconfig/next",
	"compilerOptions": {
		"types": ["vitest/globals"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"../../packages/ui/src/**/*",
		"../../packages/components/src/**/*",
		"../../packages/better-auth/src/**/*",
		"src/components/components",
		"src/lib"
	],
	"exclude": ["node_modules"]
}
