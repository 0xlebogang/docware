{
	"extends": "@repo/tsconfig/next",
	"compilerOptions": {
		"types": ["vitest/globals"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@repo/ui/*": ["../../packages/ui/src/*"],
			"@repo/components/*": [
				"src/components/components/*",
				"../../packages/components/src/*"
			]
		}
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"../../packages/ui/src/**/*",
		"../../packages/components/src/**/*",
		"../../packages/better-auth/src/**/*",
		"src/components/components"
	],
	"exclude": ["node_modules"]
}
