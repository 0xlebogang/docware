{
	"name": "google-ai-hackathon",
	"private": true,
	"engines": {
		"node": ">=18"
	},
	"workspaces": [
		"apps/*",
		"packages/*",
		"tools/*"
	],
	"scripts": {
		"dev": "turbo dev",
		"build": "turbo build",
		"services:up": "docker compose up -d",
		"services:down": "docker compose down -v",
		"lint": "turbo lint",
		"lint:fixall": "biome check --fix --unsafe",
		"lint:fix": "turbo lint:fix",
		"typecheck": "turbo typecheck",
		"prepare": "husky"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.8",
		"@changesets/cli": "^2.29.8",
		"@repo/biome": "workspace:*",
		"dotenv-cli": "^11.0.0",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"shadcn": "^3.5.1",
		"turbo": "^2.6.3",
		"typescript": "5.9.3"
	},
	"packageManager": "bun@1.3.3",
	"dependencies": {
		"@types/bun": "^1.3.4",
		"lucide-react": "^0.556.0"
	}
}
