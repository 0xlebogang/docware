{
	"$schema": "../node_modules/prisma-zod-generator/lib/config/schema.json",
	"output": "../src/generated/zod",
	"variants": {
		"input": {
			"strictMode": true,
			"excludeFields": ["id", "owner", "ownerId", "createdAt", "updatedAt"]
		},
		"pure": {
			"excludeFields": ["owner"]
		},
		"result": {
			"excludeFields": ["owner"]
		}
	},
	"naming": {
		"pureModel": {
			"filePattern": "{Model}.model.ts",
			"exportNamePattern": "{Model}Model"
		},
		"input": {
			"filePattern": "inputs/{Model}{InputType}.schema.ts",
			"exportNamePattern": "{Model}{InputType}Schema"
		},
		"enum": {
			"filePattern": "enums/{Enum}.enum.ts",
			"exportNamePattern": "{Enum}EnumSchema"
		}
	}
}
