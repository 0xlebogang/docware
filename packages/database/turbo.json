{
	"$schema": "https://turborepo.com/schema.json",
	"extends": ["//"],
	"tasks": {
		"db:studio": {
			"cache": false,
			"persistent": true
		},
		"db:generate": {
			"outputs": ["src/generated/**"]
		},
		"db:push": {
			"dependsOn": ["db:generate"]
		},
		"db:migrate": {
			"outputs": ["migrations/**"]
		},
		"db:deploy": {}
	}
}
